<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_test_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_test_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_test_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Register"
        app:layout_constraintTop_toBottomOf="@id/btn_test_login"
        app:layout_constraintBottom_toTopOf="@id/btn_test_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_test_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Home"
        app:layout_constraintTop_toBottomOf="@id/btn_test_register"
        app:layout_constraintBottom_toTopOf="@id/btn_test_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_test_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Album"
        app:layout_constraintTop_toBottomOf="@id/btn_test_home"
        app:layout_constraintBottom_toTopOf="@id/btn_test_modul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_test_modul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Modul"
        app:layout_constraintTop_toBottomOf="@id/btn_test_album"
        app:layout_constraintBottom_toTopOf="@id/btn_test_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_test_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Register"
        app:layout_constraintTop_toBottomOf="@id/btn_test_modul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>