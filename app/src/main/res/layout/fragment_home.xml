<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_24"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="@string/title_home"/>

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_test_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_24"
        android:layout_marginHorizontal="@dimen/spacing_24"
        android:text="Test Login"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btn_test_sign_up"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_test_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test SignUp"
        app:layout_constraintTop_toBottomOf="@id/btn_test_login"
        app:layout_constraintStart_toStartOf="@id/btn_test_login" />

    <TextView
        android:id="@+id/tv_upload_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="@string/upload_instruction"
        android:textSize="@dimen/text_size_20"
        android:layout_marginBottom="@dimen/spacing_100"
        android:layout_marginHorizontal="@dimen/spacing_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_24"
        android:drawablePadding="@dimen/spacing_6"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_camera"
        style="@style/Text"
        android:text="@string/from_gallery"
        app:drawableTopCompat="@drawable/ic_album_add" />

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="@dimen/spacing_6"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/text_size_12"
        style="@style/Text"
        android:text="@string/use_camera"
        android:layout_marginTop="@dimen/spacing_24"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_instruction"
        app:layout_constraintStart_toEndOf="@id/tv_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableTopCompat="@drawable/ic_camera_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>