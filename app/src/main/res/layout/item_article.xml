<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginHorizontal="@dimen/spacing_20"
    android:layout_marginBottom="@dimen/spacing_16"
    android:id="@+id/cardItemArticle"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/spacing_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_colored">

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_24"
            android:fontFamily="@font/opensans_semi_bold"
            android:lineSpacingExtra="@dimen/spacing_4"
            android:maxLines="2"
            android:text="@string/articles_title"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toTopOf="@id/tv_article_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_article_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/spacing_24"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/article_category"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_article_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>