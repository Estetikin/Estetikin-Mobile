<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.codegeniuses.estetikin.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.codegeniuses.estetikin.ui.album.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" />

    <fragment
        android:id="@+id/modulFragment"
        android:name="com.codegeniuses.estetikin.ui.modul.ModulFragment"
        android:label="fragment_modul"
        tools:layout="@layout/fragment_modul_detail" />

    <fragment
        android:id="@+id/articleFragment"
        android:name="com.codegeniuses.estetikin.ui.article.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" />
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.codegeniuses.estetikin.ui.albumDetail.AlbumDetailFragment"
        android:label="fragment_album_detail"
        tools:layout="@layout/fragment_album_detail" >
        <action
            android:id="@+id/action_albumDetailFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>

</navigation>